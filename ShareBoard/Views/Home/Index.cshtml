<div id="header">
    <div id="redbar">
        <div class="wrap" style="margin-left: 132px; margin-right: 152px;">
            <ul class="public">
                <li><a href="/login" class="btn-login">log in</a></li>
            </ul>
            <a href="/" id="btn-home">ShareBoard</a>
        </div>
    </div>
</div>
<div id="body" ng-controller="ShareBoardCtrl">
    <section class="featured">
        <form ng-submit="save()">
            <div class="whitebox" style="max-width: 800px;margin: 0px auto">
                <hgroup class="title">
                    <h2 class="share-title">I want to hear a session about...</h2>
                </hgroup>
                <textarea class="form-control" rows="3" ng-model="postItem.content"></textarea>
                <div class="clearfix">
                    <button type="submit" class="btn btn-danger share-button pull-right">Post</button>
                    <div class="btn-group pull-right share-type">
                        <button type="button" class="btn btn-success" ng-model="postItem.type">{{postItem.type}}</button>
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li ng-repeat="type in types"><a ng-click="postTypeSelect(type)">{{type}}</a></li>
                        </ul>
                    </div>
                </div>
            </div>    
        </form>
    </section>
    <section class="featured" style="margin-top: 30px;">
        <div class="bs-example" style="max-width: 800px; margin: 0px auto">
      
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title panel-title-font">I want to hear a session about...</h3>
        </div>
        Panel content
      </div>
      <div class="panel panel-warning">
        <div class="panel-heading">
          <h3 class="panel-title panel-title-font">I want to share something about...</h3>
        </div>
        Panel content
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title panel-title-font">I am ...</h3>
        </div>
        Panel content
      </div>
    </div>
    </section>
</div>
